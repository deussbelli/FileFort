<Window x:Class="UserRegistration.BlockTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Block Time" Height="150" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Select new block time:"/>
            <DatePicker x:Name="DatePicker" Margin="0 5 0 0"/>
            <TextBox x:Name="TimeTextBox" Margin="0 5 0 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Confirm" Click="ConfirmButton_Click" Margin="0 0 5 0"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
